{
  "name": "ready-or-not-shout-key",
  "version": "1.0.0",
  "description": "Desktop app that maps microphone shouts to a global keypress for Ready Or Not.",
  "main": "electron/main.js",
  "author": "",
  "license": "MIT",

  "scripts": {
    "dev": "vite",
    "build:frontend": "vite build",
    "build": "npm run build:frontend && electron-builder",
    "start": "npm run build:frontend && electron .",
    "postinstall": "electron-builder install-app-deps"
  },

  "build": {
    "appId": "com.jules.ronshoutkey",
    "productName": "Shout >0<",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": ["nsis"]
    }
  },

  "dependencies": {
    "motion": "^11.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0"
  },

  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "electron": "^31.0.0",
    "electron-builder": "^26.0.12",
    "vite": "^5.0.0"
  }
}
